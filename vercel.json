{
  "version": 2,
  "builds": [
    {
      "src": "postcard-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "postcard-backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "postcard-backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "postcard-app/build/$1"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri"
  }
}
